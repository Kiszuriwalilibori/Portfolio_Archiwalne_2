include pug_variables.pug


mixin Head
    head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    link(rel='stylesheet' href='./styles/style.css')
    link(href='https://fonts.googleapis.com/css?family=Noto+Sans&display=swap' rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Noto+Sans+KR&display=swap' rel='stylesheet')
    script(src='./scripts/main.js')
    title Piotr Maksymiuk portfolio

mixin NavigationBar
    nav(id='nav')
        article#home
            a(href='#Home')  home 
        article#name(class = 'name')
            a(href='#About')  Piotr Maksymiuk 
        article#skills(class ='name')
            a(href='#Skills') skills
        article#projects(class ='name')
            a(href='#Projects') projects

mixin Works
    each project in Projects
        a.hovercontroll(href = project.link data-overlay = project.datasrc data-offset = '50px' data-description = project.text ) #{project.alt}
        br

mixin Footer
    footer(id="footer")
        a(id="facebook" href="https://www.facebook.com/piotr.maksymiuk.940") facebook
        a(id="github" href="https://github.com/Kiszuriwalilibori") github

mixin About   
    #About.about
        .column
            h3 About
            p #{texts.about1}
            p #{texts.about2}
            p #{texts.about3}
        .column
            h3 Contact
            p #{texts.contact1}
                a(href="mailto:piotrmaksymiuk@yahoo.com.com") #{texts.contact2}
            p.h-center #{texts.contact3}
            p.h-center
                a(href="https://www.facebook.com/piotr.maksymiuk.940") facebook
            p.h-center
                a(href="mailto:piotrmaksymiuk@yahoo.com.com") mail
            p.h-center
                a(href="https://github.com/Kiszuriwalilibori") Git Hub    

mixin Skills
    #Skills.about
        .column(class ='full-column')
            h3 Skills
            ul
                li(class ='r-gr')
                    p #{texts.skill1}
                    p HTML
                    p CSS, SCSS
                    p JS
                    p React.js

                li(class ='l-gr')
                    p #{texts.skill2}
                    p Redux
                    p Styled Components
                    p Linux
                    p jQuery
                    p Bootstrap

                li(class ='r-gr')
                    p #{texts.skill3}
                    p Gulp
                    p Webpack
                    p more advanced node.js issues
                    p SQL - that is precisely what I do study now
mixin Home
    #Home.home.r-gr
        p.left Piotr Maksymiuk
        p.right Web-Developer in spe
        
            

 

mixin Projects
    .home-page(ID ="Projects")
        .overlay.frame(style='visibility: hidden;')
            img(src='6overlay.gif')
        .description
        +Works
        
doctype html
html(lang ='en')
    +Head
    body
        +NavigationBar
        main
            +Projects
            +About
            +Skills
            +Home
        +Footer
        