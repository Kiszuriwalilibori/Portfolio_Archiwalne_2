include pug_variables.pug


mixin Head
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(name='Piotr Maksymiuk Portfolio')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(rel='stylesheet' href='./styles/style.css')
        link(rel="icon" href="./project_images/foto1.png")
        script(src='./scripts/main.js' defer)
        //- script(src="https://code.jquery.com/jquery-3.1.0.js")
        script(src='https://cdnjs.cloudflare.com/ajax/libs/granim/2.0.0/granim.min.js')
        title Piotr Maksymiuk portfolio

mixin NavigationBar
    nav
        article#home
            a(href='#Home')  home 
        article#name
            a(href='#About')  Piotr Maksymiuk 
        article#skills
            a(href='#Skills') skills
        article#projects
            a(href='#Projects') projects

