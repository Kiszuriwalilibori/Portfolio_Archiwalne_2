include pug_variables.pug


mixin Head
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(name='Piotr Maksymiuk Portfolio')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(rel='stylesheet' href='./styles/style.css')
        link(rel="icon" href="./project_images/foto1.png")
        script(src='./scripts/jquery.js')
        script(src='./scripts/main.js' defer)
        link(rel='preload' href='styles/noto/noto.woff' as='font' crossorigin='anonymous')
        link(rel='preload' href='styles/oregano/oregano-regularitalic-webfont.woff2' as='font' crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/granim/2.0.0/granim.min.js' defer)
        script(src='./scripts/modernizr-custom.js' defer)
        link(rel="preload" as="image" href="https://raw.githubusercontent.com/Kiszuriwalilibori/portfolio_granim/master/project_images/moon.jpg")
        title Piotr Maksymiuk portfolio

mixin NavigationBar
    nav
        article#home
            a(href='#Home')  home 
        article#name
            a(href='#About')  Piotr Maksymiuk 
        article#skills
            a(href='#Skills') skills
        article#projects
            a(href='#Projects') projects

mixin Works
    .projects-container
        each project in Projects
            a.hovercontroll(href = project.link data-overlay = project.datasrc data-offset = '50px' data-description = project.description +". Technologie: " + project.text target = "_blank" rel="noopener") #{project.alt}
            br


mixin Footer
    footer(id="footer")
        a.facebook(id="facebook" href="https://www.facebook.com/piotr.maksymiuk.940") facebook
        a.github(id="github" href="https://github.com/Kiszuriwalilibori") github

mixin About   
    #About.about
        .column.r-gr
            h3 About
            p #{texts.about1}
            p #{texts.about2}
            p #{texts.about3}
        .column.l-gr
            h3 Contact
            p #{texts.contact1}
                a(href="mailto:piotrmaksymiuk@yahoo.com.com") #{texts.contact2}
            p #{texts.contact4} 
            p #{texts.contact5}   
            p.h-center #{texts.contact3}
            
            p.h-center
                a(href="https://www.facebook.com/piotr.maksymiuk.940") facebook
            p.h-center
                a(href="mailto:piotrmaksymiuk@yahoo.com.com") mail
            p.h-center
                a(href="https://github.com/Kiszuriwalilibori") Git Hub    

