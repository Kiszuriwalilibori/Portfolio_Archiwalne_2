mixin Works
    .projects-container
        each project in Projects
            a.hovercontroll(href = project.link data-overlay = project.datasrc data-offset = '50px' data-description = project.text target = "_blank" rel="noopener") #{project.alt}
            br






mixin Footer
    footer(id="footer")
        a.facebook(id="facebook" href="https://www.facebook.com/piotr.maksymiuk.940") facebook
        a.github(id="github" href="https://github.com/Kiszuriwalilibori") github

mixin About   
    #About.about
        .column.r-gr
            h3 About
            p #{texts.about1}
            p #{texts.about2}
            p #{texts.about3}
        .column.l-gr
            h3 Contact
            p #{texts.contact1}
                a(href="mailto:piotrmaksymiuk@yahoo.com.com") #{texts.contact2}
            p #{texts.contact4} 
            p #{texts.contact5}   
            p.h-center #{texts.contact3}
            
            p.h-center
                a(href="https://www.facebook.com/piotr.maksymiuk.940") facebook
            p.h-center
                a(href="mailto:piotrmaksymiuk@yahoo.com.com") mail
            p.h-center
                a(href="https://github.com/Kiszuriwalilibori") Git Hub    

mixin Skills
    #Skills.about
        .column(class ='full-column')
            h3 Skills
            ul
                li(class ='skill_r-gr')
                    p.right #{texts.skill1}
                    .skills
                        img.left.short(src='./project_images/skills/html5.svg' alt ='html')
                        img.left(src='./project_images/skills/css.png' alt ='css')
                        img.left(src='./project_images/skills/sass.png' alt ='sass')
                        img.left(src='./project_images/skills/js.png' alt ='java script')
                        img.left(src='./project_images/skills/react.png' alt ='react')
                        img.left(src='./project_images/skills/redux.png' alt ='redux')
                        img.left(src='./project_images/skills/router.png' alt ='router')
                        img.left(src='./project_images/skills/material.svg' alt ='material')
                        img.left(src='./project_images/skills/jquery.png' alt ='jquery')

                li(class ='skill_l-gr')
                    p.right #{texts.skill2}
                    .skills
                        img.left(src='./project_images/skills/linux.png' alt ='linux')
                        img.left(src='./project_images/skills/bootstrap.png' alt ='bootstrap')
                        img.left(src='./project_images/skills/styled.png' alt ='styled components')
                        img.left(src='./project_images/skills/redux.png' alt ='redux')
                        img.left(src='./project_images/skills/pug.svg' alt ='pug')

                li(class ='skill_r-gr')
                    p.right #{texts.skill3}
                    .skills
                        img.left(src='./project_images/skills/php.png' alt ='php')
                        img.left(src='./project_images/skills/mysql.png' alt ='mysql')
mixin Home
    #Home.home.r-gr
        img.home__foto(alt = 'author foto' src ='./project_images/foto2.png')
        p.left Piotr Maksymiuk
        p.right Web-Developer
        
mixin Projects
    .home-page.r-gr(ID ="Projects")
        .overlay.frame(style='visibility: hidden;')
            img(src ='blank_overlay.gif')
        .description
        +Works
        
doctype html
html(lang ='en' ID ='HTML')
    +Head
    canvas(ID='canvas')
    body
        div(id="loader-wrapper")
            .load
                hr
                hr
                hr
                hr
        +NavigationBar
        main
            +Projects
            +About
            +Skills
            +Home
        +Footer
        